# Production Environment Variables
# Copy this to .env for production deployment

# Required: API Keys for AI analysis
OPENAI_API_KEY=your_production_openai_api_key
GROQ_API_KEY=your_production_groq_api_key

# Optional: Additional stock data sources
ALPHA_VANTAGE_API_KEY=your_production_alpha_vantage_api_key
POLYGON_API_KEY=your_production_polygon_api_key

# Backend Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database Configuration (IMPORTANT: Change credentials in production!)
MONGODB_URL=mongodb://admin:STRONG_PRODUCTION_PASSWORD@mongodb:27017
DATABASE_NAME=ai_stock_dashboard
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=STRONG_PRODUCTION_PASSWORD

# Security Configuration (CRITICAL: Generate strong secrets for production!)
JWT_SECRET_KEY=GENERATE_STRONG_JWT_SECRET_KEY_FOR_PRODUCTION
SECRET_KEY=GENERATE_STRONG_SECRET_KEY_FOR_PRODUCTION
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=STRONG_ADMIN_PASSWORD
