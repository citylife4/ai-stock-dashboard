# Environment configuration for Oracle Autonomous Database
# Copy this file to .env.oracle and update the values

# Database Configuration
DATABASE_TYPE=oracle
ORACLE_DB_NAME=your_autonomous_db_name
ORACLE_USERNAME=ADMIN
ORACLE_PASSWORD=your_oracle_password
ORACLE_WALLET_PASSWORD=your_wallet_password
ORACLE_CONNECTION_STRING=your_db_name_high
ORACLE_WALLET_DIR=./oracle-wallet

# Fallback MongoDB (for migration)
MONGODB_URL=mongodb://mongodb:27017
DATABASE_NAME=ai_stock_dashboard

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
SECRET_KEY=your-secret-key-change-in-production

# API Keys
OPENAI_API_KEY=your_openai_api_key
GROQ_API_KEY=your_groq_api_key
POLYGON_API_KEY=your_polygon_api_key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Oracle Specific Settings
ORACLE_POOL_SIZE=10
ORACLE_MAX_OVERFLOW=20
ORACLE_POOL_TIMEOUT=30
